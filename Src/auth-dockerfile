# https://hub.docker.com/_/microsoft-dotnet
FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build
WORKDIR /source

# copy csproj and restore as distinct layers
COPY Services/AuthService/Application/*.csproj ./aspnetapp/
RUN dotnet restore "aspnetapp/Application.csproj"

# copy everything else and build app
COPY ./Services/. ./aspnetapp/
WORKDIR /source/aspnetapp
RUN dotnet publish "AuthService/Application/Application.csproj" -c release -o /app

# final stage/image
FROM mcr.microsoft.com/dotnet/aspnet:5.0
WORKDIR /app
COPY --from=build /app ./
ENTRYPOINT ["dotnet", "Application.dll"]

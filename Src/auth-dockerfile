# https://hub.docker.com/_/microsoft-dotnet
FROM mcr.microsoft.com/dotnet/aspnet:5.0 AS base
WORKDIR /source

# copy csproj and restore as distinct layers
FROM mcr.microsoft.com/dotnet/sdk:5.0-buster-slim-amd64 AS build
COPY Services ./aspnetapp/
WORKDIR /source/aspnetapp
RUN RID=linux-arm; dotnet restore "AuthService/Application/Application.csproj" -p:RestoreUseSkipNonexistentTargets=false -nowarn:msb32302,nu1503 

# copy everything else and build app
FROM build AS publish
RUN dotnet publish "AuthService/Application/Application.csproj" -c release -o /app

# final stage/image
FROM base AS final
WORKDIR /app
COPY --from=build /app ./
ENTRYPOINT ["dotnet", "Application.dll"]
